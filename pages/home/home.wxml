<!--pages/home.wxml-->
<view class='container'>
  <swiper autoplay="true" duration="1000" interval="5000" current="0" class="swiper">
    <block wx:for="{{banners}}">
      <swiper-item data-path="{{item.ym}}" bindtap="onShareTap">
        <image mode="widthFix" class="img" src="{{item.url}}">
        </image>
      </swiper-item>
    </block>
  </swiper>
</view>